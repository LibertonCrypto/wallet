{
  "manifest_version": 2,

  "name": "Liberton",
  "description": "Liberton browser extension gives you ability to interact with FreeTON blockchain effortlessly and safe.",

  "author": "Alex Balatsky",
  "version": "1.0.0",

  "icons": {
    "16": "favicon/favicon-16x16.png",
    "32": "favicon/favicon-32x32.png",
    "144": "favicon/apple-touch-icon-144x144.png"
  },

  "background": {
    "page": "index.html",
    "persistent": true
  },
  "browser_action": {
    "default_title": "Liberton",
    "default_icon": "favicon/favicon-32x32.png"
  },
  "permissions": [
    "storage",
    "*://*/",
    "activeTab",
    "tabs",
    "unlimitedStorage",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "assets/*"
  ]
}
